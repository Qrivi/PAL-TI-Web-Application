<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="PAL" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/PAL</jta-data-source>
        <class>be.peerassistedlearningti.model.Student</class>
        <class>be.peerassistedlearningti.model.Course</class>
        <class>be.peerassistedlearningti.model.Tutor</class>
        <class>be.peerassistedlearningti.model.Lesson</class>
        <class>be.peerassistedlearningti.model.Room</class>
        <class>be.peerassistedlearningti.model.RoomType</class>
        <class>be.peerassistedlearningti.model.Campus</class>
        <class>be.peerassistedlearningti.model.Application</class>
        <class>be.peerassistedlearningti.model.Review</class>
        <class>be.peerassistedlearningti.model.Request</class>
        <class>be.peerassistedlearningti.model.Image</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.engine.transaction.jta.platform.internal.SunOneJtaPlatform"/>
        </properties>
    </persistence-unit>
</persistence>